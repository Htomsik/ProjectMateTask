<UserControl
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d"
    x:Class="ProjectMateTask.VW.Pages.EntityPagesVW"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:appInfrastructure="clr-namespace:ProjectMateTask.Infrastructure.CMD.AppInfrastructure"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectMateTask.VW.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/EntityCards.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <appInfrastructure:OpenDialogWindowCmd x:Key="OpenDialogWindowCmd" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>


        <!--  <DataGrid  -->
        <!--  CanUserAddRows="False"  -->
        <!--  ItemsSource="{Binding Entities}"  -->
        <!--  SelectionMode="Extended"  -->
        <!--  SelectionUnit="Cell" />  -->


        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="200" MinWidth="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <!--  Панель выбора Entity  -->
        <DockPanel MaxWidth="250" MinWidth="150">

            <!--  Строка поиска  -->
            <TextBox
                DockPanel.Dock="Top"
                FontSize="16"
                Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}"
                materialDesign:TextFieldAssist.HasClearButton="True">

                <materialDesign:HintAssist.Hint>
                    <StackPanel Margin="-2,0,0,0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Magnify" />
                        <TextBlock Text="Поиск по имени" />
                    </StackPanel>
                </materialDesign:HintAssist.Hint>
            </TextBox>



            <!--  Панель управления кнопок  -->
            <Grid DockPanel.Dock="Bottom" Height="30">

                <Button HorizontalAlignment="Left">
                    <materialDesign:PackIcon
                        Height="20"
                        Kind="Plus"
                        Width="20" />
                </Button>

                <Button HorizontalAlignment="Right">
                    <materialDesign:PackIcon
                        Height="20"
                        Kind="Delete"
                        Width="20" />
                </Button>
            </Grid>


            <!--  List Entity  -->
            <materialDesign:Badged
                Badge="{Binding EntitiesFilteredView.Count}"
                BadgePlacementMode="TopLeft"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Margin="0,15"
                VerticalAlignment="Stretch">

                <ListView
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding EntitiesFilteredView}"
                    SelectedItem="{Binding SelectedEntity}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <VirtualizingStackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Type.Name}" />
                            </VirtualizingStackPanel>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </materialDesign:Badged>



        </DockPanel>


        <!--  Информация о выбранном Entity  -->
        <ContentControl
            Content="{Binding SelectedEntity}"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />

    </Grid>
</UserControl>
