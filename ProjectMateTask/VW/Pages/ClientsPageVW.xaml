<UserControl
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d"
    x:Class="ProjectMateTask.VW.Pages.ClientsPageVW"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:appInfrastructure="clr-namespace:ProjectMateTask.VMD.AppInfrastructure"
    xmlns:appInfrastructure1="clr-namespace:ProjectMateTask.Infrastructure.CMD.AppInfrastructure"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectMateTask.VW.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <appInfrastructure1:OpenDialogWindowCmd x:Key="OpenDialogWindowCmd" />
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Clients}" />

        <Button
            Command="{StaticResource OpenDialogWindowCmd}"
            Content="Open"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom" />
    </Grid>



</UserControl>
