<Window
    Height="450"
    Title="MainWindow"
    Width="800"
    mc:Ignorable="d"
    x:Class="ProjectMateTask.VW.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:VMD="clr-namespace:ProjectMateTask.VMD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectMateTask.VW.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:ProjectMateTask.VW.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  VMD Pages  -->
        <ContentControl Content="{Binding MainPageCurrentVmd}" Grid.Column="1">

            <ContentControl.Resources>

                <DataTemplate DataType="{x:Type VMD:MainPageVmd}">
                    <pages:MainPageVW />
                </DataTemplate>

            </ContentControl.Resources>

        </ContentControl>

        <!--  Menu  -->
        <ContentControl
            Content="{Binding MainMenuCurrentVmd}"
            Grid.Column="0"
            HorizontalContentAlignment="Stretch"
            VerticalAlignment="Stretch">

            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type VMD:MainMenuVmd}">
                    <pages:MainMenuVW />
                </DataTemplate>
            </ContentControl.Resources>

        </ContentControl>

    </Grid>
</Window>
