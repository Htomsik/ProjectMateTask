<Window
    Height="600"
    MinHeight="300"
    MinWidth="400"
    Style="{StaticResource MaterialDesignWindow}"
    Title="MainWindow"
    Width="800"
    WindowStartupLocation="CenterScreen"
    d:DataContext="{d:DesignInstance {x:Type AppInfrastructure:MainWindowVmd},
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d"
    x:Class="ProjectMateTask.VW.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:AppInfrastructure="clr-namespace:ProjectMateTask.VMD.AppInfrastructure"
    xmlns:VmdPages="clr-namespace:ProjectMateTask.VMD.Pages"
    xmlns:appInfrastructure="clr-namespace:ProjectMateTask.VW.AppInfrastructure"
    xmlns:base="clr-namespace:ProjectMateTask.VMD.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entityPages="clr-namespace:ProjectMateTask.VMD.Pages.EntityPages"
    xmlns:local="clr-namespace:ProjectMateTask.VW.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:ProjectMateTask.VW.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>




        <materialDesign:DrawerHost x:Name="DrawerHost">

            <materialDesign:DrawerHost.LeftDrawerContent>


                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="{Binding ElementName=TopDock, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!--  Кнопка закрытия меню  -->
                    <ToggleButton
                        CommandParameter="{x:Static Dock.Left}"
                        HorizontalAlignment="Right"
                        IsChecked="{Binding ElementName=DrawerHost, Path=IsLeftDrawerOpen, UpdateSourceTrigger=PropertyChanged}"
                        Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />

                    <!--  VMD menu  -->
                    <ContentControl
                        Content="{Binding MainMenuCurrentVmd}"
                        Grid.Column="0"
                        Grid.Row="1"
                        HorizontalContentAlignment="Stretch"
                        VerticalAlignment="Stretch">

                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type AppInfrastructure:MainMenuVmd}">
                                <appInfrastructure:MainMenuVW />
                            </DataTemplate>
                        </ContentControl.Resources>

                    </ContentControl>
                </Grid>


            </materialDesign:DrawerHost.LeftDrawerContent>



            <DockPanel>

                <!--  Верхнее меню  -->
                <materialDesign:ColorZone
                    DockPanel.Dock="Top"
                    Mode="PrimaryMid"
                    x:Name="TopDock">

                    <Grid>

                        <!--  Кнопка открытия меню  -->
                        <ToggleButton
                            Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            HorizontalAlignment="Left"
                            IsChecked="{Binding ElementName=DrawerHost, Path=IsLeftDrawerOpen, UpdateSourceTrigger=PropertyChanged}"
                            Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />


                        <!--  Название текущей модели представления  -->
                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            Margin="0,0,10,0"
                            Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                            Text="{Binding ElementName=VmdPagesContent, Path=Content.Tittle}"
                            VerticalAlignment="Center" />


                    </Grid>
                </materialDesign:ColorZone>


                <!--  Верхнее меню  -->
                <materialDesign:ColorZone DockPanel.Dock="Bottom" MaxHeight="30">

                    <TextBlock
                        HorizontalAlignment="Left"
                        Text="{Binding LoggingInfo}"
                        VerticalAlignment="Center" />

                </materialDesign:ColorZone>

                <!--  VMD Pages  -->
                <ContentControl
                    Content="{Binding MainPageCurrentVmd}"
                    Margin="5,5,0,0"
                    x:Name="VmdPagesContent">

                    <ContentControl.Resources>

                        <!--  Главная страница  -->
                        <DataTemplate DataType="{x:Type VmdPages:MainPageVmd}">
                            <pages:MainPageVW />
                        </DataTemplate>

                        <!--  Все Entity страницы  -->
                        <DataTemplate DataType="{x:Type base:BaseNotGenericEntityVmd}">
                            <pages:EntityPagesVW />
                        </DataTemplate>

                    </ContentControl.Resources>

                </ContentControl>




            </DockPanel>

        </materialDesign:DrawerHost>


    </Grid>
</Window>
