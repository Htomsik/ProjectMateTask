<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:actors="clr-namespace:ProjectMateTask.DAL.Entities.Actors;assembly=ProjectMateTask.DAL"
    xmlns:base="clr-namespace:ProjectMateTask.DAL.Entities.Base;assembly=ProjectMateTask.DAL"
    xmlns:collections="clr-namespace:System.Collections;assembly=System.Runtime"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Продукты  -->
    <DataTemplate DataType="{x:Type actors:Product}" x:Key="SimpleProductCard">
        <VirtualizingStackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Name}" />
            <TextBlock Text="{Binding Type.Name}" />
        </VirtualizingStackPanel>
    </DataTemplate>

    <!--  Клиенты  -->
    <DataTemplate DataType="{x:Type actors:Client}" x:Key="SimpleClientCard">
        <VirtualizingStackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Name}" />
            <TextBlock Text="{Binding Status.Name}" />
        </VirtualizingStackPanel>
    </DataTemplate>

</ResourceDictionary>