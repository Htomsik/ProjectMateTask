<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:actors="clr-namespace:ProjectMateTask.DAL.Entities.Actors;assembly=ProjectMateTask.DAL"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Карточка редактирования менеджеров  -->
    <DataTemplate DataType="{x:Type actors:Manager}" x:Key="EditManagerCard">

        <StackPanel>

            <StackPanel.Resources>
                <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">

                    <Setter Property="FontSize" Value="16" />

                    <Setter Property="IsEnabled" Value="False" />

                </Style>

            </StackPanel.Resources>

            <!--  Имя  -->
            <ContentControl
                Content="{Binding Path=.}"
                ContentTemplate="{DynamicResource EntityFieldEdit}"
                ToolTip="Имя" />



            <!--  Клиенты, работающие с менеджером  -->
            <Expander Header="Клиенты:">
                <ContentControl Content="{Binding Clients}" ContentTemplate="{DynamicResource EditCollectionCard}" />
            </Expander>

        </StackPanel>

    </DataTemplate>
</ResourceDictionary>