<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:actors="clr-namespace:ProjectMateTask.DAL.Entities.Types;assembly=ProjectMateTask.DAL"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="OurEditCards.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <!--  Карточка редактирования продуктов  -->
    <DataTemplate DataType="{x:Type actors:ProductType}" x:Key="EditProductTypeCard">

        <StackPanel>

            <StackPanel.Resources>
                <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">

                    <Setter Property="FontSize" Value="16" />

                    <Setter Property="IsEnabled" Value="False" />

                </Style>

            </StackPanel.Resources>

            <!--  Название типа продукта  -->
            <ContentControl
                Content="{Binding Path=., ValidatesOnNotifyDataErrors=False}"
                ContentTemplate="{DynamicResource NonKeyFieldEditTemplate}"
                ToolTip="Название типа" />

            <!--  Продукты у конкретного типа  -->
            <ContentControl
                Content="{Binding Products, ValidatesOnNotifyDataErrors=False}"
                ContentTemplate="{DynamicResource EditCollectionCard}"
                ToolTip="Товары:" />


        </StackPanel>

    </DataTemplate>

</ResourceDictionary>